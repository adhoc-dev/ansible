---
- name: Ansible Playbook para preparar equipos nuevos
  hosts: laptop
  tags: always
  become: yes
  pre_tasks:
    - name: Actualizar y preparar entorno
      tags: always
      apt: update_cache=yes
      changed_when: False
      when: ansible_distribution in ["Debian", "Ubuntu"]
  vars:
    home_dir: "{{ lookup('env', 'HOME') }}"
  roles:
    - funcional
    - sistemas
  tasks:
    - debug: msg="You are the user {{ lookup('env','USER') }}"